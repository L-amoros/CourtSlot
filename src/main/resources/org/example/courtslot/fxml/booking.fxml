<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane styleClass="root"
            stylesheets="@../css/homepage.css"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.courtslot.controller.BookingController">

    <!-- ══ CABECERA: título + navegación de fecha ══ -->
    <top>
        <BorderPane styleClass="booking-header">
            <left>
                <HBox alignment="CENTER_LEFT" spacing="14">
                    <Button styleClass="btn-back"
                            text="← Volver"
                            onAction="#onVolver"
                            mnemonicParsing="false" />
                    <Label fx:id="tituloLabel"
                           styleClass="booking-title"
                           text="Reserva de Pistas" />
                </HBox>
            </left>
            <right>
                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <Button fx:id="btnAnterior"
                            styleClass="nav-btn"
                            text="‹"
                            onAction="#onDiaAnterior"
                            mnemonicParsing="false" />
                    <Label fx:id="fechaLabel"
                           styleClass="fecha-label"
                           text="hoy" />
                    <Button fx:id="btnSiguiente"
                            styleClass="nav-btn"
                            text="›"
                            onAction="#onDiaSiguiente"
                            mnemonicParsing="false" />
                </HBox>
            </right>
            <BorderPane.margin>
                <Insets top="0" right="0" bottom="0" left="0"/>
            </BorderPane.margin>
        </BorderPane>
    </top>

    <!-- ══ CONTENIDO: fila por cada pista ══ -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="scroll">
            <content>
                <VBox fx:id="pistasContainer"
                      spacing="16"
                      styleClass="booking-content" />
            </content>
        </ScrollPane>
    </center>

</BorderPane>
